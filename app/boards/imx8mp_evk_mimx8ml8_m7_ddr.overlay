/ {
	host_dma: dma {
		compatible = "nxp,sof-host-dma";
		dma-channels = <32>;
		#dma-cells = <0>;
	};
};

&sdma3 {
	status = "okay";
};

&sai3 {
	pinctrl-0 = <&sai3_default>;
	pinctrl-names = "default";
	rx-fifo-watermark = <64>;
	tx-fifo-watermark = <64>;
	fifo-depth = <96>;
	rx-sync-mode = <1>;
	status = "okay";
};
